{
    "extends": "./tsconfig.json", // Extend your base tsconfig if you have one
    "compilerOptions": {
      "module": "CommonJS",
      "target": "ES2020",
      "lib": ["ES2020"],
      "strict": true,
      "esModuleInterop": true,
      "skipLibCheck": true,
      "forceConsistentCasingInFileNames": true,
      "outDir": "./dist",
      "rootDir": "./src"
    },
    "include": ["src/**/*.ts"],
    "exclude": ["node_modules", "dist"]
}